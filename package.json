{
  "name": "ts-utils",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "docgen": "typedoc",
    "doctest": "typedoc --validation.notDocumented --requiredToBeDocumented Function --requiredToBeDocumented Parameter --requiredToBeDocumented TypeParameter --treatValidationWarningsAsErrors --emit none",
    "lint": "biome lint src/",
    "lint:fix": "biome lint src/ --apply",
    "typecheck": "tsc --noEmit",
    "format": "biome format src/ --write",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.1",
    "@vitest/coverage-v8": "^1.4.0",
    "husky": "^9.0.11",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.12",
    "typedoc-plugin-coverage": "^3.1.0",
    "typedoc-plugin-missing-exports": "^2.2.0",
    "typedoc-theme-hierarchy": "^4.1.2",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  }
}
